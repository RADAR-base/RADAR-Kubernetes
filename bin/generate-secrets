#!/usr/bin/env bash

cd "$(dirname "${BASH_SOURCE[0]}")/.."
. bin/util.sh

yq --version


export mongodb_auth_replicaSetKey=$(generate_secret)
yq -i '.mongodb.auth.replicaSetKey = strenv(mongodb_auth_replicaSetKey)' etc/secrets.yaml

export mongodb_auth_rootPassword=$(generate_secret)
yq -i '.mongodb.auth.rootPassword = strenv(mongodb_auth_rootPassword)' etc/secrets.yaml

export mongodb_auth_passwords=$(generate_secret)
yq -i '.mongodb.auth.passwords[0] = strenv(mongodb_auth_passwords)' etc/secrets.yaml
